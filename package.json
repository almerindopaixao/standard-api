  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "npx tsc",
    "prestart": "yarn build",
    "start": "node dist/src/index.js",
    "dev": "npx ts-node-dev 'src/index.ts'",
    "lint": "npx eslint ./src ./test --ext .ts",
    "lint:fix": "npx eslint ./src ./test --ext .ts --fix",
    "style:check": "npx prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "npx prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test:unit": "npx jest --passWithNoTests",
    "test:functional": "npx jest --projects ./test --runInBand --passWithNoTests",
    "test": "yarn test:unit && yarn test:functional"
  },
